                else :
                    total=barang1+barang2+barang3+barang4+barang5
                    print(f"total harga yang harus dibayar adalah :{total}")
            else :
                total=barang1+barang2+barang3+barang4
                print(f"total harga yang harus dibayar :{total}")
        else :
            total=barang1+barang2+barang3
            print(f"total harga yang dibayar : {total}")
    else :
        total=barang1+barang2
        print(f"total harga yang dibayar : {total}")
        
else :
    total=barang1
    print(f"Total yang harus dibayar :{total}")   

