                    harga=int(input("masukan harga barang :"))
                    jumlah6=int(input("masukan jumlah barang :"))
                    barang6=harga5*jumlah5
                    p6=int(input("pilih 1 jika ada pesanan lain :"))
                    if p6 == 1 :
                        harga7=int(input("masukan harga barang :"))
